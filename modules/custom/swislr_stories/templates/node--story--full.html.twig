{# Story-only template provided by a module. Applies on Story full pages. #}
<article class="story">
  <header class="story__header">
    <h1 class="story__title">{{ label }}</h1>
    <div class="story__meta">
      {% if content.field_date is defined %}{{ content.field_date }}{% endif %}
      {% if content.field_tags is defined %}{{ content.field_tags }}{% endif %}
    </div>
    {% if content.field_image is defined %}
      <div class="story__hero">{{ content.field_image }}</div>
    {% endif %}
  </header>

  <div class="story__grid">
    <main class="story__main">
      {% if content.body is defined %}{{ content.body }}{% endif %}
    </main>

    <aside class="story__aside">
      {% if content.field_location is defined %}
        <div class="story__card">
          <h2 class="story__h2">Location</h2>
          {{ content.field_location }}
        </div>
      {% endif %}
    </aside>
  </div>

  {% if content.field_comment is defined %}
    <section class="story__comments" id="comments">
      <h2 class="story__h2">Comments</h2>
      {{ content.field_comment }}
    </section>
  {% endif %}
</article>

